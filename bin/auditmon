#!/usr/bin/env python

import sys
from auditmonitor import start_daemon, stop_daemon, restart_daemon, run

# Main
if __name__ == '__main__':
    if len(sys.argv) > 1:
        if 'stop' == sys.argv[1]:
            stop_daemon()
        elif 'restart' == sys.argv[1]:
            restart_daemon()
        elif 'foreground' == sys.argv[1]:
            run()

    start_daemon()